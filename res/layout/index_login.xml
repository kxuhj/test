<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/index_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:selectAllOnFocus="true"
        android:gravity="center_vertical"
        android:hint="    请输入账号"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="20dp"
        android:inputType="phone"
        android:drawableLeft="@drawable/login_zhanghao"/>
    
    
    <EditText android:id="@+id/index_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:selectAllOnFocus="true"
        android:gravity="center_vertical"
        android:hint="    请输入登录密码"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/login_mima"/>
    
    
    <TextView android:id="@+id/index_text_login"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/redwineOrange"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal" />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        
        <Button android:id="@+id/index_button_reg"
            android:text="注册账号"
            android:background="@color/gainsboro"
            android:textSize="12sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="16dp"
/>

        <Button
            android:id="@+id/index_button_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginLeft="16dp"
            android:background="@color/gainsboro"
            android:text="忘记密码"
            android:textSize="12sp" />
        
    </LinearLayout>
    
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="第三方登录"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/index_button_weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/login_weixin" />

        <ImageView
            android:id="@+id/index_button_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/login_qq" />
    </LinearLayout>

</LinearLayout>
