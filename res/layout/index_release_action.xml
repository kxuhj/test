<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <EditText
        android:id="@+id/index_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:hint="写点什么吧......"
        android:background="#FFFFFF"
        android:gravity="top|left"
        android:selectAllOnFocus="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TableRow
            android:id="@+id/index_table"
            android:layout_width="50dp"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/mrimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/pubaction_fasong" />

            <ImageView
                android:id="@+id/jia"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/index_jia" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:layout_marginTop="10dp"
        android:background="#DEDEDE"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
           android:layout_centerVertical="true"
            android:text="可见范围"
            android:textColor="#000000" />
        
        
        
               <Button
            android:id="@+id/index_friend_publish_button"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#4C5E76"
            android:text="朋友"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/index_all_publish_button"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/index_friend_publish_button"
            android:layout_centerVertical="true"
            android:background="@drawable/button_index_background"
            android:text="全部"
            android:textSize="12sp" />
    </RelativeLayout>
    
        <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEDEDE"
        android:visibility="visible" />
    
    

</LinearLayout>